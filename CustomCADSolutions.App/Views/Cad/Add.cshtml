@using CustomCADSolutions.Infrastructure.Data.Models.Enums
@model CadInputModel
@{
    Category[] categories = typeof(Category).GetEnumValues().Cast<Category>().ToArray();
    ViewData["Title"] = "Add a 3D Model To Our Gallery";
}

<h2 class="text-center mb-2">@ViewData["Title"]</h2>
<hr />
<div class="container">
    <form method="post" autocomplete="off" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        
        <div class="row justify-content-center mb-3">
            <div class="col-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="@Model.Name" class="small text-danger"></span>
            </div>
        </div>


        <div class="row justify-content-center mb-3">
            <div class="col-3">
                <label asp-for="CadFile" class="form-label"></label>
                <input asp-for="CadFile" type="file" accept=".stl" class="form-control" />
                <span asp-validation-for="CadFile" class="small text-danger"></span>
            </div>
            <div class="col-3">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="@null" selected>None</option>
                    @foreach (Category category in categories)
                    {
                        <option value="@((int)category)">@category</option>
                    }
                </select>
                <span asp-validation-for="@Model.Category" class="small text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-1">
                <input class="btn btn-primary" type="submit" value="Submit" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}