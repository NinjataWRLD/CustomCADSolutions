@using CustomCADSolutions.Infrastructure.Data.Models.Enums
@model CadInputModel
@{
    Category[] categories = typeof(Category).GetEnumValues().Cast<Category>().ToArray();
    ViewData["Title"] = $"Edit {Model.Name}";
}

<h2 class="text-center mb-2">@ViewData["Title"]</h2>
<hr />
<div class="container">
    <form method="post" autocomplete="off" enctype="multipart/form-data">
        <input asp-for="Id" hidden />

        <div class="row justify-content-center mb-3">
            <div class="col-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="@Model.Name" class="small text-danger"></span>
            </div>
            <div class="col-3">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="@null" selected>None</option>
                    @foreach (Category category in categories)
                    {
                        <option value="@((int)category)">@category</option>
                    }
                </select>
                <span asp-validation-for="@Model.Category" class="small text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-1 text-center">
                <label asp-for="X" class="form-label"></label>
                <input asp-for="X" class="form-control" />
                <span asp-validation-for="X" class="small text-danger"></span>
            </div>
            <div class="col-1 text-center">
                <label asp-for="Y" class="form-label"></label>
                <input asp-for="Y" class="form-control" />
                <span asp-validation-for="Y" class="small text-danger"></span>
            </div>
            <div class="col-1 text-center">
                <label asp-for="Z" class="form-label"></label>
                <input asp-for="Z" class="form-control" />
                <span asp-validation-for="Z" class="small text-danger"></span>
            </div>
            
            <div class="col-2">
                <label asp-for="SpinAxis" class="form-label"></label>
                <select asp-for="SpinAxis" class="form-control">
                    <option value="@null" selected>No spin</option>
                    <option value="x">X axis</option>
                    <option value="y">Y axis</option>
                    <option value="z">Z axis</option>
                </select>
                <span asp-validation-for="@Model.SpinAxis" class="small text-danger"></span>
            </div>
            <div class="col-1">
                <label asp-for="SpinFactor" class="form-label"></label>
                <input asp-for="SpinFactor" class="form-control" />
                <span asp-validation-for="@Model.SpinFactor" class="small text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-1">
                <input class="btn btn-primary mt-3" type="submit" value="Edit" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}