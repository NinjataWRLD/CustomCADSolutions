@model OrderInputModel
@{
    ViewData["Title"] = "Describe your desired design here: ";
}

<h2 class="text-center mb-2">@ViewData["Title"]</h2>
<hr />
<div class="container">
    <form method="post" autocomplete="off">
        <div class="row justify-content-center mb-3">
            <div class="col-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="@Model.Name" class="small text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" class="form-control">
                    <option value="@null" selected>None</option>
                    @foreach (Category category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="small text-danger"></span>
            </div>
        </div>
        
        <div class="row justify-content-center mb-4">
            <div class="col-8">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Description..."></textarea>
                <span asp-validation-for="@Model.Description" class="small text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center mb-4">
            <div class="col-1">
                <input class="btn btn-primary" type="submit" value="Order" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
