@model IEnumerable<OrderViewModel>
@{
}

<h2 class="text-center mb-2">All @ViewBag.UserName Orders</h2>
<hr />

<div class="d-flex justify-content-center mb-2">
    <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="Add">Add new Order</a>
</div>

@if (Model.Any())
{
    <div class="mt-4">
        <div class="row">
            @foreach (OrderViewModel order in Model)
            {
                <div class="col-6 mb-4">
                    <div class="card">
                        <h4 class="card-header text-center mb-1">@order.Name (@order.Category.ToString())</h4>
                        <div class="card-body">
                            <p class="card-text fs-5">@order.Description</p>
                            <div class="d-grid gap-2">
                                <a asp-area="" asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id" class="btn btn-primary btn-warning mt-3">
                                    Edit
                                </a>
                                <form class="mt-2" asp-area="" asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id">
                                    <div class="d-grid gap-2">
                                        <input type="submit" value="Delete" class="btn btn-danger mb-2"
                                               onclick="return confirm('Are you sure you want to delete this order: @order.Name?')" />
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card-footer text-end fs-6">@order.OrderDate</div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p class="text-center">No orders yet!</p>
}