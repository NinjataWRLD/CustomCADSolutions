@model IEnumerable<OrderViewModel>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = $"{User.Identity!.Name}\'s Orders";
}

<head>
    <script type="importmap">
        {
            "imports": {
                "three": "https://cdn.jsdelivr.net/npm/three@latest/build/three.module.js",
                "three/addons/": "https://cdn.jsdelivr.net/npm/three@latest/examples/jsm/"
            }
        }
    </script>
</head>
<body>
    <h2 class="text-center mb-2">@ViewData["Title"]</h2>
    <hr />

    <div class="d-flex justify-content-center mb-2">
        <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="Add">Add new Order</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center">No orders yet!</p>
    }
    else
    {
        <div class="container mt-4">
            <div class="row">
                @foreach (OrderViewModel order in Model)
                {
                    <div class="col-4">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <p class="mb-0 fs-4">@order.Category.ToString()</p>
                                <p class="mb-0 bg-info small rounded-2 p-2">@order.Status.ToString()</p>
                            </div>
                            <div class="card-body">
                                <p class="card-title text-center h4 mt-0 mb-3">@order.Name</p>
                                <p class="card-text fs-5">@order.Description</p>
                                <div class="d-grid gap-2">
                                    @if (order.Status == "Finished")
                                    {
                                        <a asp-controller="Cad" asp-action="Details" asp-route-id="@order.CadId"
                                           class="btn btn-primary mt-2">See 3D Model</a>
                                    }
                                    <a asp-area="" asp-controller="Order" asp-action="Edit" asp-route-cadId="@order.CadId"
                                       class="btn btn-warning mt-2">
                                        Edit
                                    </a>
                                    <form asp-area="" asp-controller="Order" asp-action="Delete" asp-route-cadId="@order.CadId" asp-route-buyerId="@order.BuyerId"
                                          class="mt-2">
                                        <div class="d-grid gap-2">
                                            <input type="submit" value="Delete" class="btn btn-danger mb-2"
                                                   onclick="return confirm('Are you sure you want to delete this order: @order.Name?')" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="card-footer text-end fs-6">@order.OrderDate</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</body>