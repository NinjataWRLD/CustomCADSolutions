@inject IViewLocalizer Localizer
@{
    CadViewModel cad = ViewBag.Chair;
}

<body class="fade-in">
    <h2 class="text-center mt-4 mb-4">CustomCADSolutions</h2>
    <hr />

    <div class="container d-flex flex-column justify-content-between mt-4">
        <div class="row flex-sm-row flex-column-reverse">
            <div class="col d-flex flex-column justify-content-evenly align-content-center">
                <h3 class="col-12 text-center">@Localizer["Title"]</h3>

                <div class="col-sm-12 mt-5 mt-sm-0 d-flex flex-column justify-items-center">
                    <p class="col text-center">@Localizer["Contribute"]</p>
                    <p class="col-12 d-flex flex-columns justify-content-around" onclick="return confirm('@Localizer["Warning"]')">
                        <a asp-area="" asp-controller="Home" asp-action="MakeContributer"
                           class="col-6 btn custombtn">@Localizer["ContributeBtn"]</a>
                    </p>
                </div>
            </div>

            <div class="col-sm-4 col-12 mt-0 mb-3">
                <div id="model-@cad.Id" class="bg-transparent"></div>
            </div>
        </div>
    </div>
    <hr />

    <div class="container d-flex justify-content-evenly mt-5 mb-5">
        <div class="col-2">
            <div style="background-color: #BBB9D9" class="card p-2">
                <p class="mb-0  text-center">@Localizer["Recycle"]</p>
            </div>
            <img src="~/others/images/recycle.png" class="mt-3 w-100 h-auto rounded-circle" />
        </div>

        <div class="col-2">
            <div style="background-color: #BBB9D9" class="card p-2">
                <p class="mb-0 text-center">@Localizer["Delivery"]</p>
            </div>
            <img src="~/others/images/delivery.png" class="mt-3 w-100 h-auto rounded-circle" />
        </div>

        <div class="col-2">
            <div style="background-color: #BBB9D9" class="card p-2">
                <p class="mb-0 text-center">@Localizer["Quality"]</p>
            </div>
            <img src="~/others/images/quality.png" class="mt-3 w-100 h-auto rounded-circle" />
        </div>

    </div>
</body>

@section Scripts {
    <script type="module">
        import { loadModel } from '../../js/site.mjs';

        const cad = {
            id: @cad.Id,
            name: '@cad.Name',
            x: @cad.Coords.Item1,
            y: @cad.Coords.Item2,
            z: @cad.Coords.Item3,
            axis: '@cad.SpinAxis',
            speed: @cad.SpinFactor.ToString(new CultureInfo("en-US")),
            texture: '@cad.TexturePath', // !
            fov: @cad.Fov,
        };

        loadModel(cad);
    </script>


    <script>
        const divElement = document.getElementById('model-@cad.Id');
        divElement.setAttribute('style', 'height: 20rem !important');
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/animation.css" />
    <link rel="stylesheet" href="~/css/index.css" />
}