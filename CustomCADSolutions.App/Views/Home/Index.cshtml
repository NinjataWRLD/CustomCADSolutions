@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <link rel="stylesheet" href="css/home/index.css" />
</head>

<body>

    <section class="container">
        <article id="model" class="fade-in body">
            <iframe class="fade-in body floater" title="Robofrog"
                    src="https://sketchfab.com/models/99bfe75ebd734fa3832a63e02e2cacf7/embed?annotations_visible=0&autospin=-1&autostart=1&preload=1&camera=1&double_click=0&internal=1&max_texture_size=1024&orbit_constraint_pan=1&scrollwheel=1&sound_enable=1&transparent=1&ui_animations=0&ui_annotations=0&ui_ar=0&ui_ar_help=0&ui_color=white&ui_fadeout=0&ui_fullscreen=0&ui_help=0&ui_infos=0&ui_inspector=0&ui_settings=0&ui_stop=0&ui_theatre=0&ui_theme=light&ui_vr=0&ui_watermark=0"
                    frameborder="0"
                    allow="autoplay; fullscreen; xr-spatial-tracking"
                    allowfullscreen="" mozallowfullscreen="true" webkitallowfullscreen="true"
                    xr-spatial-tracking="true"
                    execution-while-out-of-viewport="true" execution-while-not-rendered="true"
                    web-share="true">
            </iframe>
        </article>
        <div id="main" class="fade-in body">
            <h1 id="title" class="fade-in body">Where Your Imagination Comes to Life!</h1>
            <h3 id="subtitle" class="fade-in body">
                In a world sculpted by pixels and imagination,
                each 3D model is a bridge between dream and reality,
                transforming visions into virtual 3D masterpieces!
            </h3>
            <section id="buttons">
                <button id="button1" class="fade-in button body">
                    <a target="_self" asp-area="" asp-controller="Order" asp-action="Index">Order Your Model</a>
                </button>
                <button id="button2" class="fade-in button body">
                    <a target="_self" asp-area="" asp-controller="Cad" asp-action="Add">Submit a 3D Model</a>
                </button>
            </section>
        </div>
    </section>

</body>
</html>