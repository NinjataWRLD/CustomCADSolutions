@model string
@inject IViewLocalizer Localizer
@{
}
<li class="nav-item dropdown">
    <button class="dropdown-toggle bg-transparent border-0 nav-link text-end" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <span class="text-dark">@Localizer["Language"]</span>
    </button>
    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="SetLanguage" asp-route-culture="bg-BG" asp-route-returnUrl="@Model">
                <img class="w-100 h-auto" src="~/others/images/flags/4x3/bg.svg" alt="Bulgarian">
            </a>
        </li>
        <li>
            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="SetLanguage" asp-route-culture="en-US" asp-route-returnUrl="@Model">
                <img class="w-100 h-auto" src="~/others/images/flags/4x3/us.svg" alt="English">
            </a>
        </li>
    </ul>
</li>