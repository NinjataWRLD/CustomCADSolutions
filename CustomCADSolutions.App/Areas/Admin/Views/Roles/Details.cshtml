@model RoleDetailsViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Role Details";
}

<h2 class="text-center">@Localizer["Title", Model.Name]</h2>
<hr />

<div class="container d-flex justify-content-center">
    <div class="col-6">
        <div class="card">
            <div class="card-header text-center">@Localizer["Header", Model.Users.Count]</div>
            <div class="card-body">
                <table class="col-12">
                    <thead>
                        <tr>
                            <th class="col-8 text-center">@Localizer["Id"]</th>
                            <th class="col-4 text-center">@Localizer["Name"]</th>
                        </tr>
                    </thead>
                    <tbody >
                        @foreach (UserViewModel user in Model.Users)
                        {
                            <tr>
                                <td class="col-8 text-center">
                                    <span class="d-flex justify-content-center text-center">@user.Id</span>
                                </td>
                                <td class="col-4 text-center">
                                    <span class="d-flex justify-content-center">@user.Username</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>