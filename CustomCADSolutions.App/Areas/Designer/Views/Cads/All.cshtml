@model CadViewModel[]
@inject IViewLocalizer Localizer
@{
    ViewBag.Cols = 3;
    ViewBag.Buttons = Array.Empty<string>();
}

<h2 class="text-center">@Localizer["Title"]</h2>
<hr />

<div class="container">
    <div class="row d-flex justify-content-evenly">
        <a asp-area="Designer" asp-controller="Cads" asp-action="Index"
           class="col-sm-2 col-12 mb-sm-0 mb-3 btn btn-primary">
            @Localizer["UrCads", ViewBag.DesignerDetails]
        </a>
        <a asp-area="Designer" asp-controller="Cads" asp-action="Submitted"
           class="col-sm-2 col-12 mb-sm-0 mb-3 btn btn-secondary">
            @Localizer["UnvCads", ViewBag.UnvalidatedDetails]
        </a>
    </div>
    @if (Model.Any())
    {
        <div class="row d-flex">
            @foreach (CadViewModel cad in Model)
            {
                ViewBag.Header = $"{cad.Name} ({Localizer[cad.Category].Value})";
                <partial name="_CardCadPartial" model="cad" view-data="ViewData" />
            }
        </div>
    }
    else
    {
        <p>@Localizer["NoCads"]</p>
    }
</div>