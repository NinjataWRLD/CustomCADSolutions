@model IEnumerable<OrderViewModel>
@inject IViewLocalizer Localizer
@{
    bool isBg = CultureInfo.CurrentCulture.Name == "bg-BG";
}


<h2 class="text-center mb-2">@Localizer["Title", User.Identity!.Name!]</h2>
<hr />

<div class="d-flex justify-content-center mb-2">
    <a class="btn btn-primary" asp-area="Contributer" asp-controller="Order" asp-action="Add">@Localizer["Add"]</a>
</div>

@if (!Model.Any())
{
    <p class="text-center">@Localizer["NoOrders"]</p>
}
else
{
    <div class="container mt-4">
        <div class="row">
            @foreach (OrderViewModel order in Model)
            {
                string status = order.Status, statusBg = status switch { "Pending" => "Предстояща", "Begun" => "Започната", "Finished" => "Завършена" };
                <div class="col-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <p class="mb-0 fs-4">@(isBg ? order.BgCategory : order.Category)</p>
                            <p class="mb-0 bg-info small rounded-2 p-2">@(isBg ? statusBg : status)</p>
                        </div>
                        <div class="card-body">
                            <p class="card-title text-center h4 mb-3">@order.Name</p>
                            <p class="card-text fs-5">@order.Description</p>
                            <div class="d-grid gap-2">
                                <div class="d-flex justify-content-evenly mb-3 gap-2">
                                    @if (order.Status == "Finished")
                                    {
                                        <a class="col btn btn-secondary" asp-area="Contributer" asp-controller="Order" asp-action="Details" asp-route-id="@order.CadId">@Localizer["Details"]</a>
                                    }
                                    <a asp-area="Contributer" asp-controller="Order" asp-action="Edit" asp-route-cadId="@order.CadId" class="col btn btn-warning">@Localizer["Edit"]</a>
                                    <form asp-area="Contributer" asp-controller="Order" asp-action="Delete" asp-route-cadId="@order.CadId" asp-route-buyerId="@order.BuyerId" class="col">
                                        <div class="d-grid gap-2">
                                            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger"
                                                   onclick="return confirm('Are you sure you want to delete this order: @order.Name?')" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-end fs-6">@order.OrderDate</div>
                    </div>
                </div>
            }
        </div>
    </div>
}