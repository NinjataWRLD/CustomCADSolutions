@using System.Globalization
@model LoginInputModel   
@{
    bool isBg = CultureInfo.CurrentCulture.Name == "bg-BG";
}

<h1 class="text-center">@(isBg ? "Влез" : "Log in")</h1>
<br />

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <h2 class="text-center">@(isBg ? "Влез в съществуващ акаунт." : "Use a local account to log in.")</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Username" class="form-label"></label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mt-2 mb-1">
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="mb-4">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@(isBg ? "Влез" : "Log in")</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
