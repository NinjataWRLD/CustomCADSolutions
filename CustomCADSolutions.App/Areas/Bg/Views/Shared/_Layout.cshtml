@using CustomCADSolutions.Infrastructure.Data.Models.Enums
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject UserManager<IdentityUser> UserManager
@{
    //await UserManager.AddToRoleAsync(await UserManager.FindByNameAsync("NinjaBG"), "Designer");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CustomCADSolutions</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" type="image/x-icon" href="~/icon.ico" />

    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler toggler fade-in" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon toggler-icon"></span>
                </button>
                <a style="width: 10vh; height: 10vh;" class="fade-in me-3" asp-area="Bg" asp-controller="Home" asp-action="Index">
                    <img class="mw-100 h-auto" src="~/logo.png">
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between fs-5">
                    <ul class="justify-content-start fade-in navbar-nav">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            string userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                            IdentityUser? user = await UserManager.FindByIdAsync(userId);
                            if (await UserManager.IsInRoleAsync(user, "Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Bg" asp-controller="Home" asp-action="Categories" role="button">Категории</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Bg" asp-controller="Order" asp-action="All" role="button">Всички Поръчки</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Bg" asp-controller="Cad" asp-action="Index" role="button">Вашите 3D Модели</a>
                                </li>
                            }
                            else if (await UserManager.IsInRoleAsync(user, "Designer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Bg" asp-controller="Home" asp-action="Categories" role="button">Категории</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Bg" asp-controller="Order" asp-action="Index" role="button">Вашите Поръчки</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Bg" asp-controller="Cad" asp-action="Index" role="button">Вашите 3D Модели</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Bg" asp-controller="Home" asp-action="Categories" role="button">Категории</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Bg" asp-controller="Order" asp-action="Index" role="button">Вашите Поръчки</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" role="button">Начало</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Categories" role="button">Разгледайте</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <hr />

    <footer class="footer position-relative w-100">
        <div class="d-flex align-items-center justify-content-around">
            <div class="m-2 dropdown">
                <button class="btn btn-secondary border-0 bg-transparent text-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Друг език?
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-area="">Английски</a></li>
                    <li><a class="dropdown-item" asp-area="Bg">Български</a></li>
                </ul>
            </div>
            <p class="m-2">
                &copy; @DateTime.Now.Year - CustomCADSolutions - <a class="text-dark fw-bold" asp-area="Bg" asp-controller="Home" asp-action="Privacy">Поверителност</a>
            </p>
            <p class="m-2 rounded-2 p-2">
                <span>За нас:</span>
                <a href="https://www.instagram.com/customcadsolutions/" class="text-black"><i class="ms-1 fa fa-instagram"></i></a>
                <a href="https://twitter.com/customcads/" class="text-black"><i class="ms-1 fa fa-twitter"></i></a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
