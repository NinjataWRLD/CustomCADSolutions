@using CustomCADSolutions.Infrastructure.Data.Models.Enums
@model CustomCADSolutions.App.Areas.Bg.Models.OrderInputModel
@{
    Category[] categories = typeof(Category).GetEnumValues().Cast<Category>().ToArray();
    string[] categoriesName = typeof(Category).GetEnumNames();
    Dictionary<int, string> bgCategories = ViewBag.BgCategories;
    ViewData["Title"] = "Опишете желания Ви модел тук: ";
}

<h2 class="text-center mb-2">@ViewData["Title"]</h2>
<hr />
<div class="container">
    <form method="post" autocomplete="off">
        <div class="row justify-content-center mb-3">
            <div class="col-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Име..." />
                <span asp-validation-for="@Model.Name" class="small text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="@null" selected>Никоя</option>
                    @foreach (var category in bgCategories)
                    {
                        <option value="@(category.Key)">@category.Value</option>
                    }
                </select>
                <span asp-validation-for="@Model.Category" class="small text-danger"></span>
            </div>
        </div>
        
        <div class="row justify-content-center mb-4">
            <div class="col-8">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Описание..."></textarea>
                <span asp-validation-for="@Model.Description" class="small text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center mb-4">
            <div class="col-1">
                <input class="btn btn-primary" type="submit" value="Order" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
