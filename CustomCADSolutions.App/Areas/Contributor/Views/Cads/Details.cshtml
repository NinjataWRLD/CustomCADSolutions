@model CadViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "3D Model Details";
    ViewBag.Area = "Contributor";
    ViewBag.Buttons = new string[] { "Colorize", "Edit", "Delete" };
}

<h1 class="text-center">@Localizer["Title", Model.Name]</h1>
<hr />

<partial name="_CadDetailsPartial" model="Model" view-data="ViewData" />

@section Scripts {
    <script>
        const divElement = document.getElementById('model-@Model.Id');
        divElement.setAttribute('style', 'height: 50vh; width: 100%;');
    </script>
}