@model String[]
@{
    int rows = 3;
    int cols = 5;
}

<html>
<head>
    <style>
        .col a:hover {
            text-decoration: black underline !important;
        }

        .col a img:hover {
            opacity: 50%;
        }
    </style>
</head>
<body>

    <div class="d-grid">
        @for (int i = 0; i < rows; i++)
        {
            <div class="row mx-5">
                @for (int j = 0; j < cols; j++)
                {
                    string category = Model[j + i * cols];
                    <div class="col">
                        <a class="text-decoration-none" asp-area="" asp-controller="CAD" asp-action="Index" asp-route-category="@category">
                            <img class=" rounded mw-100 h-auto" src="~/others/categories/@(category).png" alt="@category" width="600px" height="400px">
                            <p class="text-center text-dark">@category</p>
                        </a>
                    </div>
                }
            </div>
        }
    </div>

</body>
</html>