    @{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <!--Mobile css-->
    <style media="only screen and (max-width: 775px) ">
        .container {
            display: flex;
            flex-direction: column;
        }

        #model {
            order: 1;
            height: 40vh;
        }

        .floater {
            width: 100%;
            height: 100%;
        }

        #main {
            order: 2;
            display: flex;
            flex-direction: column;
            row-gap: 20px;
            width: 100%;
            height: 70vh;
            text-align: center;
        }

        #title {
            font-size: 1.3em;
        }

        #subtitle {
            font-size: 0.69em;
        }

        #buttons {
            display: flex;
            column-gap: 5px;
        }
        /*
                .button img {
                    border-radius: 30px;
                    width: 100%;
                    height: auto;
                }
                */

        .button {
            width: 100%;
            height: auto;
            border-radius: 7px;
            border: 0px;
        }
        /*#F3F5F2*/

        #button1 {
            background-color: #ff9e3a;
        }

        #button2 {
            background-color: #1caad9;
        }

        .button a {
            font-size: 80%;
            font-weight: 700;
            color: white;
            text-decoration: none;
        }

        #logo {
            animation-delay: 0.25s;
        }

        .body {
            animation-delay: 1s;
        }
    </style>

    <!--Desktop css-->
    <style media="(min-width: 775px)">
        #main {
            order: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            row-gap: 20px;
            width: 50%;
            height: 70vh;
            text-align: center;
        }

        #title {
            font-size: 2.1em;
        }

        #subtitle {
            font-size: 1.2em;
        }

        #buttons {
            display: flex;
            column-gap: 10px;
        }
        /*
                        .button img {
                            border-radius: 30px;
                            width: 100%;
                            height: auto;
                        }
                        */

        .button {
            width: 100%;
            height: auto;
            border-radius: 7px;
            padding: 4%;
            border: 0px;
        }
        /*#F3F5F2*/

        #button1 {
            background-color: #BBB9D9;
        }

        #button2 {
            background-color: #BBB9D9;
        }

        .button a {
            color: black;
            font-size: 100%;
            text-decoration: none;
        }

        #model {
            order: 2;
            float: right;
            width: 100%;
            height: 70vh;
        }

        .floater {
            width: 100%;
            height: 100%;
        }


        #logo {
            animation-delay: 0.25s;
        }

        #hbtn1 {
            animation-delay: 0.50s;
        }

        #hbtn2 {
            animation-delay: 0.75s;
        }

        #hbtn3 {
            animation-delay: 1.00s;
        }

        #hbtn4 {
            animation-delay: 1.25s;
        }

        .body {
            animation-delay: 2s;
        }
    </style>
    
    <!--Animation-->
    <link rel="stylesheet" href="~/css/index.css" />
</head>

<body>
    <div class="container d-flex">
        <article id="model" class="fade-in body w-100">
            <iframe class="fade-in body floater" title="Robofrog"
                    src="https://sketchfab.com/models/99bfe75ebd734fa3832a63e02e2cacf7/embed?annotations_visible=0&autospin=-1&autostart=1&preload=1&camera=1&double_click=0&internal=1&max_texture_size=1024&orbit_constraint_pan=1&scrollwheel=1&sound_enable=1&transparent=1&ui_animations=0&ui_annotations=0&ui_ar=0&ui_ar_help=0&ui_color=white&ui_fadeout=0&ui_fullscreen=0&ui_help=0&ui_infos=0&ui_inspector=0&ui_settings=0&ui_stop=0&ui_theatre=0&ui_theme=light&ui_vr=0&ui_watermark=0"
                    frameborder="0"
                    allow="autoplay; fullscreen; xr-spatial-tracking"
                    allowfullscreen="" mozallowfullscreen="true" webkitallowfullscreen="true"
                    xr-spatial-tracking="true"
                    execution-while-out-of-viewport="true" execution-while-not-rendered="true"
                    web-share="true">
            </iframe>
        </article>
        <div id="main" class="fade-in body">
            <h1 id="title" class="fade-in body">Where Your Imagination Comes to Life!</h1>
            <h3 id="subtitle" class="fade-in body">
                In a world sculpted by pixels and imagination,
                each 3D model is a bridge between dream and reality,
                transforming visions into virtual 3D masterpieces!
            </h3>
            <section id="buttons">
                <button id="button1" class="fade-in button body">
                    <a target="_self" asp-area="" asp-controller="Order" asp-action="Index">Order Your Model</a>
                </button>
                <button id="button2" class="fade-in button body">
                    <a target="_self" asp-area="" asp-controller="Cad" asp-action="Add">Submit a 3D Model</a>
                </button>
            </section>
        </div>
    </div>
</body>
</html>