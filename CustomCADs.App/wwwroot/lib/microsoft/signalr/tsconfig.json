{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext", // or "commonjs" if your project requires it
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Optionally set to true to skip type checking of all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
